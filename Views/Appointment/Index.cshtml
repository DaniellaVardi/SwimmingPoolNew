@using SwimmingPoolNew.Controllers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="row">
    <div class="container">
        @if (User.IsInRole(SwimmingPoolNew.Utility.Helper.Admin))
        {
            <div class="form-group  col-4" id="divTeacherList">
                <label> Select Teacher</label>
                @Html.DropDownList("teacherId", new SelectList(ViewBag.TeacherList, "Id", "Name"), new
                {
                    @class = "form-control select2",
                    @onchange= "onTeacherChange();"
                })
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment" />

