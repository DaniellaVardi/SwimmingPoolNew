<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="model-dialog">
        <div class="model-content">
            <form id="apppointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="model-header">
                    <h4 class="model-title">Add/Edit Class</h4>
                </div>
                <div class="model-body">
                    @*<div class="form-group">
            <label for="title">Title</label>
            <input type="text" maxlength="100" class="form-control" id="title" />
        </div>*@
                    <div class="form-group">
                        <label for="title"> Select Type</label>
                        <select id="ClassId" asp-items="@(new SelectList(ViewBag.ClassTypeList,"Id","Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="title"> Select Style</label>
                        <select id="StuleId" asp-items="@(new SelectList(ViewBag.StyleList,"Id","Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="title">Duration</label>
                        <select id="duration" asp-items="ViewBag.Duration" class="form-control"></select>
                    </div>
                    <input type="hidden" id="id" />
                </div>
                <div class="model-footer">
                    <button type="button" class="btn btb-secondary" onclick="onCloseModal();">Close</button> &nbsp;
                    <button type="button" id="btnSubmit" class="btn btb-success" onclick="onSubmitForm();">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
